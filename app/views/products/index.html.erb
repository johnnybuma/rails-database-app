<div class="container">

  <div class="row">
    <div class="col-md-3">
      <h3>Products</h3>
    </div>
    <div class="col-md-6 search-div form-inline">
      <%= form_tag(products_path, :method => "get", id: "search-form", class: "control-group") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Products", class: "form-control form-margin" %>
          <%= submit_tag "Search", class: " btn btn-primary form-margin" %>
    <% end %>
    <% if @products.present? %>
        <%= render @products %>
    <% else %>
        <p>There are no products containing the term(s) <%= params[:search] %>.</p>
    <% end %>
    </div>
  </div>
  <div class="well">
    <%= link_to "New Product", new_product_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-product"></div>

  <div class="row form-margin product-index">
    <div class="col-lg-12 table-responsive">
     <table class="table">

       <tr>
         <th>Id:</th>
         <th>Name:</th>
         <th class="notable">Size:</th>
         <th class="notable">Color:</th>
         <th class="notable">Weight:</th>
         <th class="notable">Dimensions:</th>
         <th class="notable">Quantity:</th>
         <th class="notable">Location:</th>
         <th class="notable">Description:</th>
         <th>Edit:</th>
         <th>Delete:</th>
       </tr>

       
       <%= render "index" %>
      </table>
    </div>
  </div>
  
</div>
<div id="product-modal" class="modal fade" tabindex="-1"></div>
