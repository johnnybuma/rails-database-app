

$("ul.errors").html("")
<% if @product.errors.any? %>
<% @product.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
<% end %>
<% else %>
$("#showit").html("<%= escape_javascript(render 'product') %>");
$("#product-modal").modal("hide");
<% end %>

alert('success!');
